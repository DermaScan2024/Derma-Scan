<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/laranja_claro_derma"
    tools:context=".RecoveryPassword.RecoveryKey">

    <FrameLayout
        android:layout_width="407dp"
        android:layout_height="430dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/email_recovery_id"
            android:layout_width="323dp"
            android:layout_height="72dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/camp_text"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/roxo_derma" />

        <TextView
            android:id="@+id/RecoveryText_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Digite seu email"
            android:textColor="@color/roxo_derma"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_recovery_id"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="@color/roxo_derma"
            android:fontFamily="@font/poppins_bold"
            android:onClick="SendEmail"
            android:text="Enviar"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar_Recovery_id"
            style="?android:attr/progressBarStyle"
            android:layout_width="76dp"
            android:layout_height="108dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="300dp"
            android:indeterminateTint="@color/roxo_derma"
            android:visibility="invisible" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>