<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/laranja_claro_derma"
    tools:context=".Application.CreateLogin">

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="298dp"
        android:layout_marginBottom="360dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="770dp"
            android:layout_height="504dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="388dp"
        android:layout_height="159dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/return_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/poppins_light"
            android:text="JÃ¡ tem uma conta?"
            android:textColor="@color/roxo_derma" />

        <TextView
            android:id="@+id/return_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttons_options_salmon"
            android:fontFamily="@font/poppins_bold"
            android:onClick="ReturnLogin"
            android:text="Login"
            android:textColor="@color/roxo_derma" />

        <TextView
            android:id="@+id/textViewConta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="conta"
            android:textColor="@color/roxo_derma"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textViewCriar"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Criar uma"
            android:textColor="@color/roxo_derma"
            android:textSize="34sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="403dp"
        android:layout_height="181dp"
        android:layout_marginTop="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/camp_email_Create_id"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="70dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/camp_text"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/roxo_derma"
            android:textColorHint="@color/roxo_derma"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/camp_name_Create_id"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/camp_text"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Name"
            android:inputType="text"
            android:textColor="@color/roxo_derma"
            android:textColorHint="@color/roxo_derma"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="60dp"
            app:srcCompat="@drawable/iconuser" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/email" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="140dp"
            app:srcCompat="@drawable/password" />

        <EditText
            android:id="@+id/Password_camp_Create_id"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="140dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/camp_text"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="@color/roxo_derma"
            android:textColorHint="@color/roxo_derma"
            android:textSize="12sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="73dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/btnCadastrar_id"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/roxo_derma"
            android:fontFamily="@font/poppins_bold"
            android:onClick="register"
            android:text="ENTRAR"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar_create_login"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/roxo_derma"
            android:visibility="invisible" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>