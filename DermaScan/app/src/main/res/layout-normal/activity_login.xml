<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/laranja_claro_derma">

    <FrameLayout
        android:layout_width="412dp"
        android:layout_height="377dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="770dp"
            android:layout_height="504dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="405dp"
        android:layout_height="134dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.552">

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center|top"
            android:fontFamily="@font/poppins_bold"
            android:text="Login"
            android:textColor="@color/roxo_derma"
            android:textSize="48sp"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="358dp"
        android:layout_height="157dp"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/login_email_id"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:background="@drawable/camp_text"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Nome ou E-mail"
            android:inputType="text"
            android:textColor="@color/roxo_derma"
            android:textColorHint="@color/roxo_derma"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            app:srcCompat="@drawable/iconuser" />

        <EditText
            android:id="@+id/login_password_camp_id"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="25dp"
            android:background="@drawable/camp_text"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="@color/roxo_derma"
            android:textColorHint="@color/roxo_derma"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="25dp"
            app:srcCompat="@drawable/password" />

        <TextView
            android:id="@+id/create_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-5dp"
            android:fontFamily="@font/poppins_bold"
            android:onClick="pageNewAccount"
            android:text="Criar Conta"
            android:textColor="@color/roxo_derma"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="411dp"
        android:layout_height="156dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/entrar_id"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/roxo_derma"
            android:fontFamily="@font/poppins_bold"
            android:onClick="pageUser"
            android:text="ENTRAR"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar_Login"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateOnly="true"
            android:indeterminateTint="@color/roxo_derma"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/recoverKey_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:background="@drawable/buttons_options_salmon"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:onClick="recoveryKey"
            android:text="Esqueceu a senha?"
            android:textColor="@color/roxo_derma"
            android:textSize="16sp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>